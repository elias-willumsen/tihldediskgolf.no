generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  url      = env("DATABASE_URL")
}

enum Study {
  DATAINGENIÃ˜R
  DIGSEC
  DIGFOR
  DIGTRANS
  INFOMASJONSBEHANDLING
  ANDRE
}

model Player {
  id        String   @id @default(uuid())
  uuid      String   @unique
  name      String
  age       Int
  study     Study
  createdAt DateTime @default(now())
  results   Result[]
}

model Game {
  id        String   @id @default(uuid())
  date      DateTime
  course    String
  createdAt DateTime @default(now())
  results   Result[]
}

model Result {
  id        String   @id @default(uuid())
  playerId  String
  gameId    String
  strokes   Int

  player    Player   @relation(fields: [playerId], references: [id])
  game      Game     @relation(fields: [gameId], references: [id])

  @@unique([playerId, gameId])
}
